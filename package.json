{
  "name": "hello-world",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "postbuild": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./post_build.ps1",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@chenfengyuan/vue-number-input": "^1.2.0",
    "core-js": "^3.3.2",
    "jshint": "^2.10.3",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0",
    "tinycolor2": "^1.4.1",
    "vue": "^2.6.11",
    "vue-color": "^2.7.0",
    "vue-number-input-spinner": "^2.2.0",
    "vue-numeric-input": "^1.0.5",
    "vue-slider-component": "^3.0.43",
    "webpack": "^4.41.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
	"extends": [
	  "eslint:recommended",
	  "plugin:vue"
    ],
    "rules": {
      "no-console": "off",
	  "no-unused-vars": "warn",
	  "vue/no-unused-components": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
